<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#4000"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pop_win_top_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/mainBackGround"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pop_win_top_layout_play_list_name1"
                android:layout_width="wrap_content"
                android:text="播放列表"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@drawable/black"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/pop_window_refresh_song_list"
                android:layout_width="20dp"
                android:src="@drawable/refresh"
                android:layout_marginRight="60dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/close_pop_window"
                android:src="@drawable/shousuo"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/pop_win_top_layout_play_list_name"
            android:layout_width="wrap_content"
            android:text="当前歌单："
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:textColor="#298A08"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/song_play_list_pop_window_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>



</LinearLayout>