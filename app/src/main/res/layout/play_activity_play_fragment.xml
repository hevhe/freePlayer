<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#5000"
    android:layout_marginTop="100dp"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/play_activity_play_mid_layout"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:layout_above="@id/play_activity_play_bottom_layout"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="280dp"
            android:layout_centerInParent="true"
            android:src="@drawable/cd"
            android:layout_height="280dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/play_activity_play_mid_image_view"
            android:layout_width="190dp"
            app:civ_border_color="@drawable/black"
            app:civ_border_width="5dp"
            android:layout_centerInParent="true"
            android:src="@drawable/music"
            android:layout_height="190dp"/>

        <myView.CircularProgressView
            android:layout_width="290dp"
            app:backWidth="5dp"
            app:progress="0"
            app:backColor="@drawable/gray"
            android:layout_centerInParent="true"
            android:layout_height="290dp"/>

        <ImageView
            android:id="@+id/play_activity_play_mid_image_zhizhen_view"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/zhizhen"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@id/play_activity_play_bottom_layout"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="40dp"
            android:layout_height="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/play_activity_mid_lrc1"
                android:text=""
                android:textSize="15sp"
                android:textColor="@drawable/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/play_activity_mid_lrc2"
                android:paddingTop="10dp"
                android:textSize="15sp"
                android:textColor="@drawable/gray"
                android:text=""
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/play_activity_bottom_love_but"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:src="@drawable/love"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/play_activity_bottom_download_but"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/download"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/liuyan"
                android:layout_height="30dp"/>
            <ImageView
                android:id="@+id/play_activity_bottom_more_info_but"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:src="@drawable/more"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"/>

        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/play_activity_play_bottom_layout"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="30dp">

            <TextView
                android:layout_width="0dp"
                android:id="@+id/play_activity_play_bottom_now_play_time_text"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@drawable/white"
                android:text="00:00"
                android:layout_height="match_parent"/>

            <SeekBar
                android:id="@+id/play_activity_play_bottom_seekbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:max="100"
                android:maxHeight="3.4dp"
                android:minHeight="3.4dp"
                android:progress="0"
                android:progressDrawable="@drawable/seek_bar_style" />

            <TextView
                android:id="@+id/play_activity_play_bottom_remain_play_time_text"
                android:layout_width="0dp"
                android:gravity="center"
                android:textColor="@drawable/white"
                android:layout_weight="1"
                android:text="00:00"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/play_activity_bottom_play_mode_but"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:src="@drawable/round"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/play_activity_bottom_pre_but"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pre"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/play_activity_bottom_play_but"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/play"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/play_activity_bottom_next_but"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:src="@drawable/next"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/play_activity_bottom_play_list_but"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/list"
                android:layout_height="30dp"/>

        </LinearLayout>
    </RelativeLayout>








</RelativeLayout>



</LinearLayout>