<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/support_main_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/play_song_list_support_delete_song_list_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:text="1"
        android:focusable="false"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:layout_toRightOf="@+id/play_song_list_support_delete_song_list_item_id"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_weight="11">

        <TextView
            android:id="@+id/play_song_list_support_delete_song_list_item_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="TextView"
            android:focusable="false"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/play_song_list_support_delete_song_list_item_singer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="12"
            android:focusable="false"
            android:textColor="@drawable/gray"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_song_list_support_delete_song_list_item_delete_but"
        android:layout_width="60dp"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_height="40dp">

        <ImageView
            android:src="@drawable/delete"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:layout_height="20dp"/>

    </LinearLayout>




</RelativeLayout>